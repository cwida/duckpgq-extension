-CREATE PROPERTY GRAPH pg
VERTEX TABLES (
student
)
EDGE TABLES (
knows   SOURCE KEY (src) REFERENCES student (id)
        DESTINATION KEY (dst) references student (id)
);

query II
-FROM GRAPH_TABLE(pg
    MATCH (f:student)-[k:knows]->{0,3}(f2:student)
    COLUMNS (*)
    );
